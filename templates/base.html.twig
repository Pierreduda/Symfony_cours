<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			
		{% endblock %}
	</head>
	<body>
		<div class="container">
			{% include "nav.html.twig" %}
			{# MESSAGES #}
			{% for indice, messages in app.flashes %}
				{% for message in messages %}
						<div class="alert alert-{{ indice }}">
							{{ message }}
						</div>
				{% endfor %}
			{% endfor %}
			<h1 class="text-info">Bienvenue dans la biblioth√®que</h1>
			{% block body %}{% endblock %}
		</div>
	</body>
</html>
