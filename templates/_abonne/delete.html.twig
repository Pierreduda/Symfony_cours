{% extends "base.html.twig" %}

{% block body %}
	<h1>Confirmer la suppression de l'abonné n°{{ abonne.id}}</h1>
	<ul class="list-group">
		<li class="list-group item">
			<strong>Pseudo :
			</strong>
			{{abonne.pseudo}}
		</li>
	</ul>
	<div class="row mt-3">
		<form method="post">
			<button class="btn btn-primary">Confirmer</button>
		</form>
		<a href="{{path('abonne')}}" class="btn btn-danger">Annuler</a>
	</div>


{% endblock %}
