{% extends 'base.html.twig' %}

{% block title %}Liste des Abonnes{% endblock %}

{% block body %}
	<table class="table table-bordered table-striped">
		<thead class="thead-dark">
			<th>ID</th>
			<th>Pseudo</th>
			<th>Nom</th>
			<th>Prenom</th>
			<th>Actions</th>
		</thead>
		<tbody>
			{% for abonne in liste_abonne %}
				<tr>
					<td>{{ abonne.id }}</td>
					<td>{{ abonne.pseudo }}</td>
					<td>{{ abonne.nom }}</td>
					<td>{{ abonne.prenom }}</td>
					<td><a href="{{ path("abonne_update", {id: abonne.id})}}"><i class="far fa-edit"></i> </a>
					<a href="{{ path("abonne_delete", {id: abonne.id})}}"><i class="fas fa-trash"></i> </a>
					{# <a href="{{ path("abonne_detail", {id: abonne.id})}}"><i class="fas fa-eye"></i></a> #}
                    </td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
